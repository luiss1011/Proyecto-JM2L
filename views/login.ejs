<%- include('./layout/header'); %>

<% if (typeof mensajeExito !== 'undefined' && mensajeExito) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <strong>¡Éxito!</strong> <%= mensajeExito %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
  <% } %>
  
    <div class="container" id="container">
        <div class="form-container sign-up">
            <form action="/registro" method="POST">
                <h1>Registrate</h1>
                <div class="social-icons">
                    <a href="#" class="icon"><i class="fa-brands fa-google-plus-g"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-github"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-linkedin-in"></i></a>
                </div>
                <span>Ingresa tus datos</span>
                <input type="text" placeholder="Nombre Completo" name="nombre">
                <input type="email" placeholder="Correo" name="correo">
                <select id="departamento" name="departamento" required>
                    <option value="" disabled selected>Seleccione un departamento</option>
                    <option value="TI">TI</option>
                    <option value="Recursos Humanos">Recursos Humanos</option>
                    <option value="Finanzas">Finanzas</option>
                    <option value="Marketing">Marketing</option>
                    <option value="Operaciones">Operaciones</option>
                </select>
                <input type="text" placeholder="Puesto" name="puesto">
                <input type="hidden" name="rol" value="empleado">
                <input type="password" placeholder="Contraseña" name="contrasena">
                <input type="password" placeholder="Confirmar Contraseña" name="confContrasena">
                <button>Registrar</button>
            </form>
        </div>
        <div class="form-container sign-in">
            <form action="login" method="POST">
                <h1>Iniciar sesion</h1>
                <div class="social-icons">
                    <a href="#" class="icon"><i class="fa-brands fa-google-plus-g"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-github"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-linkedin-in"></i></a>
                </div>
                <span>Ingresa correo y contraseña</span>
                <input type="Correo" placeholder="Correo" name="correo">
                <input type="password" placeholder="Contraseña" name="contrasena">
                <a href="#">Olvidaste tu contraseña?</a>
                <button>Entrar</button>
            </form>
        </div>
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <h1>¡Bienvenido de nuevo!</h1>
                    <p>ingrese sus datos personales para usar todas las funciones del sitio</p>
                    <button class="hidden" id="login">Iniciar sesion</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <h1>¡Hola, Amigo!</h1>
                    <p>Regístrese con sus datos personales para utilizar este sitio</p>
                    <button class="hidden" id="register">Registrar</button>
                </div>
            </div>
        </div>
    </div>
<%- include('./layout/footer'); %>
